INPUT vec2 'Position';
INPUT vec2 'Size';

vec2 main(Particle2D particle)
{
    ;
    vec2 random = hash_0_to_1_3D_to_3D(vec3(_time, _delta_time, particle.id)).xy;
    ;

    return 'Position' + 'Size' * (random - vec2(0.5));
}
