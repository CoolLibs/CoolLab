INPUT float->vec3 'Curve';

vec2 main(Particle3D particle)
{
    uint particle_count = DispatchSize.x;

    float t = float(particle.id) / float(particle_count - 1);

    vec3 current_position_0_to_1 = 'Curve'(t);

    return mix(particle.position, current_position_0_to_1, 0.5);
}