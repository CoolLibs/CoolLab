INPUT float 'Density';

$Particle main($Particle particle)
{
    float amplitude = length(particle.velocity);
    $vec  direction = amplitude == 0 ? $vec(0) : normalize(particle.velocity);
    particle.acceleration -= direction * amplitude * amplitude * 'Density';
    return particle;
}
