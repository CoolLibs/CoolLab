INPUT UV->float 'Greyscale';
INPUT UV->sRGB 'Hatching 1';
INPUT UV->sRGB 'Hatching 2';
INPUT UV->sRGB 'Hatching 3';

sRGB main(UV uv)
{
    float level = floor('Greyscale'(uv) * 4.);
    vec3  res   = vec3(1.);
    if (level < 3)
        res *= 'Hatching 1'(uv);
    if (level < 2)
        res *= 'Hatching 2'(uv);
    if (level < 1)
        res *= 'Hatching 3'(uv);

    return res;
}