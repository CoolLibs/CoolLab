INPUT float `strength`;
INPUT Point2D `Center`;

vec2 distort(vec2 uv, float power)
{
    vec2 polar_uv = polar_from_vec2(uv);
    return vec2_from_polar(pow(polar_uv.x, power), polar_uv.y);
}

UV main(UV uv)
{
    return distort(uv -`Center`,`strength`);
}
