INPUT UV->SignedDistance `Shape`;
INPUT float `Factor`;
INPUT float `Amount`;
INPUT float `Radius`;

float main(UV uv){
  float val = step(0., -1*`Shape`(uv)); //White if in the shape, else black
  float fac = `Factor`;
  val += clamp((`Radius`/`Shape`(uv))*fac, 0., 1.) * `Amount`; // add glow in the black part 

  return val;
}