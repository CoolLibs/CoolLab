INPUT UV->sRGB `Height Map`;

INPUT float `Normal Strength`;
// INPUT float `Size`;
// INPUT vec2 `offset`;

sRGB main(UV uv)
{
    float image_offset_y = 1 / _height;
    float image_offset_x = 1 / (_aspect_ratio * _height);

    float p  = `Height Map`(uv).x;
    float h1 = `Height Map`(uv + image_offset_x * vec2(10, 0)).x;
    float v1 = `Height Map`(uv + image_offset_y * vec2(0, 10)).x;

    return vec3(p - vec2(h1, v1), 1.) * 10 *`Normal Strength`;
}