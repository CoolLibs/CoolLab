#include "_COOL_RES_/shaders/iqnoise_3D.glsl"

INPUT int `Detail`;

SignedDistance main(vec3 pos)
{
    float f = 0.;
    float s = 0.5;
    for (int i = 0; i < `Detail`; i++)
    {
        f += s * iqnoise_3D(pos);
        s *= 0.5;
        pos *= 2.0;
    }
    return f;
}