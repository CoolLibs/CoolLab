#include "_COOL_RES_/shaders/simplex_noise_2D.glsl"

INPUT float `Time`;
INPUT float `Speed`;
INPUT float `Intensity`;

UV main(UV uv){
    
    vec2 time = vec2(`Time`);
    float intensity = simplex_noise_2D(time*`Speed`) * (`Intensity`/10);
    float angle = simplex_noise_2D(time)*2*PI;
    vec2 shake = vec2_from_polar(intensity,angle);

    return uv+shake;
}
