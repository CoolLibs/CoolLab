INPUT float 'Density';

Particle3D main(Particle3D particle)
{
    float amplitude = length(particle.velocity);
    vec3  direction = amplitude == 0 ? vec3(0) : normalize(particle.velocity);
    particle.acceleration -= direction * amplitude * amplitude * 'Density';
    return particle;
}
