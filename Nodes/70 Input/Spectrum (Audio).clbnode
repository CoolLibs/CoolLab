INPUT float 'Stretch';

#include "_ROOT_FOLDER_/res/shader/sample_audio_spectrum_buffer.glsl"

float main(float Frequency)
{
    float sampling_point = Frequency / 'Stretch';
    return _display_audio_spectrum_as_bars
               ? sample_nearest_neighbour_audio_spectrum(sampling_point)
               : sample_linear_audio_spectrum(sampling_point);
}