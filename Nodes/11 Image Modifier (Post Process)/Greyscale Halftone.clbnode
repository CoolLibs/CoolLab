INPUT UV->float 'Greyscale';

INPUT float 'Scale';

float dot_screen(vec2 uv)
{
    uv *= 'Scale';
    return sin(uv.x) * sin(uv.y) * 4.;
}

float main(UV uv)
{
    return saturate('Greyscale'(uv)*10. - 5. + dot_screen(uv));
}