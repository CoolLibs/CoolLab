INPUT float 'Seed';
INPUT $vec 'Position';
INPUT float 'Radius';

$vec main($Particle particle)
{
    float random = hash_0_to_1_3D_to_1D(vec3(coollab_context.particle.position.x, _delta_time, coollab_context.particle.index));

    $$if(IS_3D);
    vec3 point = random_point_on_sphere(random);
    $$else;
    vec2 point = random_point_on_disk(random);
    $$endif;

    return 'Radius' * point;
}
