INPUT float 'Max Velocity';

$Particle main($Particle Particle)
{
    float velocity = length(Particle.velocity);
    if (velocity > 'Max Velocity' && velocity != 0.)
        Particle.velocity = normalize(Particle.velocity) * 'Max Velocity';
    return Particle;
}
