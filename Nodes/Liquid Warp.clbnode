INPUT float `Violence`;
INPUT float `Level of extreme`;
INPUT float `Time`;
INPUT UV->sRGB `Image`;

float warp( float a )
{
    float timeMod = `Time` + a;
    return a + sin( timeMod * `Level of extreme`) * `Violence`  ;
}

sRGB main(UV uv)
{
    // warp each uv coord seperately using our cool function
    uv.x = warp(uv.x);
    uv.y = warp(uv.y);
    
    // return the color from the texture with the warped uv
	return `Image`(uv);
}