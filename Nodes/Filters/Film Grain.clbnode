INPUT UV->LinearRGB `Image`;
INPUT float `Density`;
INPUT float `Black / White`;

LinearRGB main(UV uv){
    vec2 unnormalized_uv=uv*_height / 1000.;
    
    vec2 rand = hash_0_to_1_2D_to_2D(unnormalized_uv);
    float noise = rand.x < `Density`
                    ? rand.y * `Black / White` 
                    : 0.;
    return `Image`(uv) + noise;
}
