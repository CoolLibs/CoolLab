(RayMarchRes res)
{
    float fog_amount = 1.0 - exp( -res.distance * fog_density);
    color = mix(color, fog_color, fog_amount) ;
}

float {
    "Name": "fog_density",
    "Default": 0.005,
    "Min": 0.001,
    "Max": 0.05
}

color {
    "Name": "fog_color",
    "Default": {
        "x": 1.0,
        "y": 1.0,
        "z": 1.0
    }
}