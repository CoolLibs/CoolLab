[] (vec3 p) {
    float scale = 1.0;
    float dist = 0.0;
    for (int i = 0 ; i < FRACTAL_ITER ; i++) {
        dist = max(dist, crossDist(p)*scale);
        p = fract((p-1.0)*0.5) * 6.0 - 3.0;
        scale /= 3.0;
    }
    return dist;
