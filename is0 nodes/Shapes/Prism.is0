[] (NodeRes ndr) {
    float d = max(
        -ndr.pos.z - Height/2,
         ndr.pos.z - Height/2
    ); 
    for (int i = 0; i < Faces_Count; ++i) {
        const float c = cos(i * TAU / Faces_Count);
        const float s = sin(i * TAU / Faces_Count);
        const vec3 polygon_vertex = vec3(c, s, 0.);
        d = smooth_max_polynomial(d,
                _prism_Half_Space_SDF(ndr.pos, polygon_vertex, Base_Radius * polygon_vertex),
                Smoothing
        );
    }
    return NodeRes(ndr.pos, d, ndr.md);
}

